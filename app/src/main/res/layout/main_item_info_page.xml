<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_item_info_overview"
            android:text="Info"
            style="@style/main_item_textStyle"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_item_info_writers"
            android:text="main_item_info_writers"
            style="@style/main_item_textStyle"

    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_item_info_director"
            android:text="main_item_info_director"
            style="@style/main_item_textStyle"

    />






</LinearLayout>